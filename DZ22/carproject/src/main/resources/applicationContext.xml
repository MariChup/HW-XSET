<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="wheel" class="com.example.car.Wheel"/>
    <bean id="starter" class="com.example.car.Starter"/>
    <bean id="sparkPlug" class="com.example.car.SparkPlug"/>
    <bean id="accumulator" class="com.example.car.Accumulator"/>
    <bean id="engine" class="com.example.car.Engine">
        <property name="starter" ref="starter"/>
        <property name="sparkPlug" ref="sparkPlug"/>
        <property name="accumulator" ref="accumulator"/>
    </bean>
    <bean id="hinge" class="com.example.car.Hinge"/>
    <bean id="suspension" class="com.example.car.Suspension">
        <property name="hinge" ref="hinge"/>
    </bean>
    <bean id="differential" class="com.example.car.Differential"/>
    <bean id="car" class="com.example.car.Car">
        <property name="wheel" ref="wheel"/>
        <property name="engine" ref="engine"/>
        <property name="suspension" ref="suspension"/>
        <property name="differential" ref="differential"/>
    </bean>
</beans>
